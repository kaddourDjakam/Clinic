<UserControl x:Class="Clinik.View.ServicesView.CustomMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Clinik.View.ServicesView"
             mc:Ignorable="d" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            d:DesignHeight="100" d:DesignWidth="300" Background="White">

    <Button Background="{Binding BackgroundColor}"  Height="75" BorderBrush="Gray"  materialDesign:ButtonAssist.CornerRadius="10" >
        
        <!-- Customize the layout of your message here -->
        <TextBlock Text="{Binding Message}" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Button>
</UserControl>
